{
  "name": "lohono-db-context",
  "version": "1.0.0",
  "description": "MCP server with Zod validation",
  "type": "module",
  "main": "dist/lohono-mcp-server/src/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx lohono-mcp-server/src/index.ts",
    "dev:sse": "tsx lohono-mcp-server/src/index-sse.ts",
    "start": "node dist/lohono-mcp-server/src/index.js",
    "start:sse": "node dist/lohono-mcp-server/src/index-sse.js",
    "generate": "tsx lohono-mcp-server/src/cli-generate.ts",
    "import-redash": "tsx lohono-mcp-server/src/cli-import-redash.ts",
    "dev:client": "tsx lohono-mcp-client/src/index.ts",
    "start:client": "node dist/lohono-mcp-client/src/index.js",
    "dev:helpdesk": "tsx lohono-helpdesk-server/src/index-sse.ts",
    "query-kb": "tsx lohono-helpdesk-server/src/cli-query-kb.ts",
    "start:helpdesk": "node dist/lohono-helpdesk-server/src/index-sse.js",
    "dev:chat": "npm --prefix lohono-chat-client run dev",
    "build:chat": "npm --prefix lohono-chat-client run build",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "mcp",
    "zod",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.2.0",
    "@types/pg": "^8.16.0",
    "@types/uuid": "^10.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.73.0",
    "@aws-sdk/client-bedrock-agent-runtime": "^3.990.0",
    "@modelcontextprotocol/sdk": "^1.25.3",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.49.0",
    "@opentelemetry/exporter-logs-otlp-grpc": "^0.52.0",
    "@opentelemetry/exporter-trace-otlp-grpc": "^0.52.0",
    "@opentelemetry/resources": "^1.25.0",
    "@opentelemetry/sdk-logs": "^0.52.0",
    "@opentelemetry/sdk-node": "^0.52.0",
    "@opentelemetry/sdk-trace-base": "^1.25.0",
    "@opentelemetry/semantic-conventions": "^1.25.0",
    "cors": "^2.8.6",
    "dotenv": "^17.2.4",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "ioredis": "^5.9.3",
    "js-yaml": "^4.1.1",
    "mongodb": "^7.1.0",
    "pg": "^8.18.0",
    "uuid": "^13.0.0",
    "winston": "^3.14.0",
    "zod": "^4.3.6"
  }
}
