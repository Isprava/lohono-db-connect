{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": [
    "lohono-mcp-server/src/**/*",
    "lohono-mcp-client/src/**/*",
    "lohono-helpdesk-server/src/**/*",
    "shared/observability/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "lohono-chat-client",
    "**/__tests__/**/*",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
